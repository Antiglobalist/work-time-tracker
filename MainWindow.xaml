<Window x:Class="WorkTimeTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WorkTimeTracking.ViewModels"
        xmlns:views="clr-namespace:WorkTimeTracking.Views"
        Title="{DynamicResource AppTitle}" Height="550" Width="850"
        MinHeight="400" MinWidth="650"
        Background="{StaticResource BackgroundBrush}"
        Icon="Assets/AppIcon.png"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:TimerViewModel}">
            <views:TimerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
            <views:HistoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DayDetailViewModel}">
            <views:DayDetailView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <StackPanel Margin="0,16,0,0">
                <RadioButton Style="{StaticResource SidebarButtonStyle}"
                             Tag="&#x23F1;" Content="{DynamicResource MenuTimer}" IsChecked="True"
                             Command="{Binding NavigateToTimerCommand}" />
                <RadioButton Style="{StaticResource SidebarButtonStyle}"
                             Tag="&#x1F4CB;" Content="{DynamicResource MenuHistory}"
                             Command="{Binding NavigateToHistoryCommand}" />
                <RadioButton Style="{StaticResource SidebarButtonStyle}"
                             Tag="&#x2699;" Content="{DynamicResource MenuSettings}"
                             Command="{Binding NavigateToSettingsCommand}" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>
