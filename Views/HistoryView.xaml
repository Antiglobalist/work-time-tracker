<UserControl x:Class="WorkTimeTracking.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WorkTimeTracking.ViewModels">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Days List -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" Padding="0">
            <ListBox ItemsSource="{Binding Days}" SelectedItem="{Binding SelectedDay}"
                     Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryTextBrush}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8,6">
                            <TextBlock Text="{Binding DateText}" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}" />
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock Text="{DynamicResource HistoryPcLabelShort}" FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}" />
                                <TextBlock Text="{Binding ActiveTime}" FontSize="11" Margin="6,0,0,0"
                                           Foreground="{StaticResource AccentGreenBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}" CornerRadius="4"
                                            Margin="4,1">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background"
                                                    Value="{StaticResource SelectedBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background"
                                                    Value="{StaticResource HoverBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <!-- Day Detail Panel -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="24,16">
            <StackPanel DataContext="{Binding SelectedDay}">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding DateText}" FontSize="20" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />

                    <!-- Open detail button -->
                    <Button Grid.Column="1" Content="{DynamicResource DetailsButton}" Command="{Binding DataContext.OpenDayDetailCommand,
                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource StartButtonStyle}"
                            HorizontalAlignment="Right" Padding="20,8"
                            Background="{StaticResource SelectedBrush}" FontSize="13" />
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="{DynamicResource ActiveTimeLabel}" FontSize="14"
                               Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" />
                    <TextBlock Text="{Binding ActiveTime}" FontSize="14" Margin="6,0,0,0"
                               Foreground="{StaticResource PrimaryTextBrush}" FontWeight="Bold" />
                    <TextBlock Text="{DynamicResource InactiveTimeLabel}" FontSize="14"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding InactiveTime}" FontSize="14" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="{DynamicResource TotalForDayLabel}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding TotalTime}" FontSize="13" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="{DynamicResource WorkDayStartTime}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding FirstActivityTime}" FontSize="13" Margin="6,0,12,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{DynamicResource WorkDayEndTime}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding LastActivityTime}" FontSize="13" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>

                <!-- Git Branch Summary -->
                <TextBlock Text="{DynamicResource GitBranchesDay}" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ItemsControl ItemsSource="{Binding GitBranchSummaries}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorderStyle}" BorderBrush="#2A2A5C">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding BranchName}" FontSize="14"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Margin="0,0,12,0" MinWidth="160" />
                                    <TextBlock Text="{Binding DurationText}" FontSize="14"
                                               Foreground="{StaticResource SecondaryTextBrush}" />
                                    <TextBlock FontSize="13" Foreground="#57F287" Margin="8,0,0,0"
                                               Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                                               Text="{DynamicResource ActiveLabel}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Sessions -->
                <ItemsControl ItemsSource="{Binding Sessions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding TimeRange}" FontSize="14"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Margin="0,0,12,0" MinWidth="110" />
                                    <TextBlock Text="{Binding TypeText}" FontSize="14" Margin="0,0,6,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActivity}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsInactivity}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding DurationText}" FontSize="14"
                                               Foreground="{StaticResource SecondaryTextBrush}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
