<UserControl x:Class="WorkTimeTracking.Views.TimerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WorkTimeTracking.ViewModels">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,16">
        <StackPanel>
            <!-- Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource AccentRedBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTracking}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource AccentGreenBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock Text="{DynamicResource StatusLabel}" FontSize="18" Foreground="{StaticResource PrimaryTextBrush}" />
                <TextBlock FontSize="18" FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding StatusText}" />
                            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTracking}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <!-- Toggle Tracking Button -->
            <Grid Margin="0,0,0,12">
                <Button Command="{Binding ToggleTrackingCommand}" HorizontalAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource StartButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTracking}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ButtonRedBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="&#x25B6;" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTracking}" Value="True">
                                            <Setter Property="Text" Value="&#x25A0;" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding ToggleButtonText}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Current Day Summary -->
            <TextBlock Text="{DynamicResource CurrentDayTitle}" FontSize="20" FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12" />

            <StackPanel Margin="0,0,0,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource ActiveTimeLabel}" FontSize="14" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Text="{Binding TotalActiveTime}" FontSize="14" FontWeight="Bold" Margin="6,0,0,0"
                               Foreground="{StaticResource PrimaryTextBrush}" />
                    <TextBlock Text="{DynamicResource InactiveTimeLabel}" FontSize="14"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding TotalInactiveTime}" FontSize="14" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                    <TextBlock Text="{DynamicResource LastActivityLabel}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding LastActivity}" FontSize="13" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="{DynamicResource WorkDayStartTime}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{Binding FirstActivityTime}" FontSize="13" Margin="6,0,12,0"
                               Foreground="{StaticResource SecondaryTextBrush}" />
                    <TextBlock Text="{DynamicResource WorkDayEndTime}" FontSize="13"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Visibility="{Binding ShowEndTime, Converter={StaticResource BoolToVis}}" />
                    <TextBlock Text="{Binding LastActivityTime}" FontSize="13" Margin="6,0,0,0"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               Visibility="{Binding ShowEndTime, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
            </StackPanel>

            <!-- Git Branch Summary -->
            <TextBlock Text="{DynamicResource GitBranchesToday}" FontSize="16" FontWeight="SemiBold"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,12,0,8">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ItemsControl ItemsSource="{Binding GitBranchSummaries}">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}" BorderBrush="#2A2A5C">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding BranchName}" FontSize="14"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,12,0" MinWidth="160" />
                                <TextBlock Text="{Binding DurationText}" FontSize="14"
                                           Foreground="{StaticResource SecondaryTextBrush}" />
                                <TextBlock FontSize="13" Foreground="#57F287" Margin="8,0,0,0"
                                           Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                                           Text="{DynamicResource ActiveLabel}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Separator if both lists have items -->
            <TextBlock Text="{DynamicResource IntervalsLabel}" FontSize="16" FontWeight="SemiBold"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,8,0,8" />

            <!-- Sessions List -->
            <ItemsControl ItemsSource="{Binding Sessions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TimeRange}" FontSize="14"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,12,0" MinWidth="110" />
                                <TextBlock Text="{Binding TypeText}" FontSize="14" Margin="0,0,6,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActivity}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsInactivity}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding DurationText}" FontSize="14"
                                           Foreground="{StaticResource SecondaryTextBrush}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
