<UserControl x:Class="WorkTimeTracking.Views.DayDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WorkTimeTracking.ViewModels">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,16">
        <StackPanel>
            <!-- Back button -->
            <Button Content="{DynamicResource BackButton}" Command="{Binding GoBackCommand}"
                    Style="{StaticResource StartButtonStyle}"
                    Background="{StaticResource SelectedBrush}"
                    HorizontalAlignment="Left" Padding="16,6" FontSize="13"
                    Margin="0,0,0,16" />

            <TextBlock Text="{Binding DateHeader}" FontSize="22" FontWeight="SemiBold"
                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,16" />

            <!-- Summary -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="{DynamicResource ActiveTimeLabel}" FontSize="14" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}" />
                <TextBlock Text="{Binding TotalActiveTime}" FontSize="14" FontWeight="Bold" Margin="6,0,0,0"
                           Foreground="{StaticResource PrimaryTextBrush}" />
                <TextBlock Text="{DynamicResource InactiveTimeLabel}" FontSize="14"
                           Foreground="{StaticResource SecondaryTextBrush}" />
                <TextBlock Text="{Binding TotalInactiveTime}" FontSize="14" Margin="6,0,0,0"
                           Foreground="{StaticResource SecondaryTextBrush}" />
            </StackPanel>

            <TextBlock Margin="0,0,0,20" FontSize="13"
                       Foreground="{StaticResource SecondaryTextBrush}">
                <Run Text="{DynamicResource TotalForDayLabel}" />
                <Run Text="{Binding TotalDayTime, Mode=OneWay}" />
            </TextBlock>

            <!-- Git Branch Summary -->
            <TextBlock Text="{DynamicResource GitBranchesDay}" FontSize="16" FontWeight="SemiBold"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ItemsControl ItemsSource="{Binding GitBranchSummaries}">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GitBranchSummaries.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}" BorderBrush="#2A2A5C">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding BranchName}" FontSize="14"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,12,0" MinWidth="160" />
                                <TextBlock Text="{Binding DurationText}" FontSize="14"
                                           Foreground="{StaticResource SecondaryTextBrush}" />
                                <TextBlock FontSize="13" Foreground="#57F287" Margin="8,0,0,0"
                                           Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}"
                                           Text="{DynamicResource ActiveLabel}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Timeline -->
            <ItemsControl ItemsSource="{Binding Sessions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorderStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TimeRange}" FontSize="14"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Margin="0,0,12,0" MinWidth="110" />
                                <TextBlock Text="{Binding TypeText}" FontSize="14" Margin="0,0,6,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActivity}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsInactivity}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding DurationText}" FontSize="14"
                                           Foreground="{StaticResource SecondaryTextBrush}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
